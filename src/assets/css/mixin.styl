bg-image($url)
  background-image: url($url + "@2x.png")
  @media(-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")


bg-image2($url)
  background-image: url("../../assets/img/" + $url + "@2x.png") no-repeat center / cover
  @media(-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url("../../assets/img/" + $url + "@3x.png") no-repeat center / cover



border-1px-bottom($color) // 颜色为$color的1px下划线
  position relative
  &:after
    display block
    position absolute
    left 0
    bottom 0
    width 100%
    border-top 1px solid $color
    content ' '

border-1px($color, $type){ // 颜色$color的1px下划线 $type(solid, dotted)
  position: relative;
  &::before{
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    width: 200%;
    border:1px $type $color;
    color: $color;
    height: 200%;
    -webkit-transform-origin: left top;
    transform-origin: left top;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
    pointer-events: none; /* 防止点击触发 */
    box-sizing: border-box;
    border-radius .2rem
    @media screen and (min-device-pixel-ratio:3),(-webkit-min-device-pixel-ratio:3){
      width: 300%;
      height: 300%;
      -webkit-transform: scale(0.33);
      transform: scale(0.33);
    }
  }
}

// 扩展点击区域
extend-click() {
  position: relative;
  &:before {
    position absolute
    content: '';
    top: -5px;
    left: -5px;
    right: -20px;
    bottom: -5px;
  }
}
