.v-title
  font-size: .3rem
  display inline-block
  color #000
  font-weight: bolder
  position: relative
  z-index 1
  &::before
    content ''
    display: block
    position: absolute
    top: 97%
    left: 0
    width: 100%
    height: .1rem
    border-radius .05rem
    background-color: #ffe941

.v-content-wrapper // 外层容器公共样式
  position relative
  padding .46rem .4rem .4rem .4rem
  width 100%

.v-loading // loading样式
  position fixed
  top 50%
  left 50%
  z-index 90
  transform translate(-50%, -50%)
.slide-w {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
  z-index: 300;
  &.slide-enter-active, &.slide-leave-active {
    transition: all .3s linear;
  }
  &.slide-enter, &.slide-leave-to {
    transform: translate3d(100%, 0, 0);
  }
  &.slide-enter-to, &.slide-leave {
    transform: translate3d(0, 0, 0);
  }
}

