.v-input-item
  height: 1rem
  width: 100%
  display: flex
  align-items center
  margin-bottom: .2rem
  position: relative
  border-bottom: 1px solid #e6e6e6
  &:after
    content: "";
    width: 0;
    height: 1px;
    background: #000;
    position: absolute;
    top: 100%;
    left: 50%;
    transition: all .3s;
  &.focus
    &:after
      left: 0;
      width: 100%;
    .label
      color #000 !important
  &.no-text
    border-bottom: 1px solid #e6e6e6
    &.focus
      .label
        color #000 !important

